<TsGui LiveData="TRUE" >
	<Height>330</Height>
	<Width>500</Width>

	<!--<ShowGridLines/>-->
	<HardwareEval />
	
	<Heading>
		<!--<Title>TsGui</Title>
		<Text>Task Sequence GUI base config</Text>
		<Bg-Color>#ff0000</Bg-Color>
		<Image>
			<File>avatar.jpg</File>
			<Width>70</Width>
			<Height>50</Height>
			<Stretch>None</Stretch>
		</Image>
