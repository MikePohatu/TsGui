<TsGui>
	<Height>540</Height>
	<Width>920</Width>

	<HardwareEval />
	
	<Heading>
		<Title>TsGui</Title>
		<Text>Task Sequence GUI</Text>
	</Heading>

	<Page>
		<Row>
			<Column>
				<Formatting>
					<LeftCellWidth>110</LeftCellWidth>
					<RightCellWidth>160</RightCellWidth>
				</Formatting>
				
				<GuiOption Type="ComputerName" />
				
				<!--CheckBox used as a toggle -->
				<GuiOption Type="CheckBox">
					<Variable>TOGGLE_Test</Variable>
					<Label>Test group enabled</Label>
					<HAlign>left</HAlign>
					
					<Toggle Group="Group_Test">
						<Enabled>TRUE</Enabled>
						<Disabled>FALSE</Disabled>
					</Toggle>
				</GuiOption>
			</Column>
		</Row>
	</Page>
	
	<NoUI >
		<BlindOption Variable="BlindOption_1" Value="BlindOption_1_Val"/>
		<BlindOption Variable="BlindOption_2" >
			<SetValue>
				<Query Type="Wmi">
					<Wql>SELECT Year,Day,Month FROM Win32_LocalTime</Wql>
					<Property Name="Year">
						<Truncate Type="KeepFromEnd">2</Truncate>	<!-- Type options: KeepFromEnd, KeepFromStart, RemoveFromEnd, RemoveFromStart -->
						<Prefix>PC-</Prefix>
					</Property>
					<Property Name="Month"/>
					<Property Name="Day"/>			
					<Separator></Separator>
				</Query>
			</SetValue>
		</BlindOption>
		<Container>
			<Group>Group_Test</Group>
			<BlindOption Variable="BlindOption_3" Value="BlindOption_3_Val"/>
			<BlindOption>
				<Variable>BlindOption_4</Variable>
				<SetValue>
					<Value>BlindOption_4_Val</Value>
				</SetValue>
				<InactiveValue>BlindOption_4_Inactive</InactiveValue>
			</BlindOption>
			<BlindOption Variable="BlindOption_5" Value="BlindOption_5_Val" PurgeInactive="TRUE"/>
		</Container>
	</NoUI>
</TsGui>