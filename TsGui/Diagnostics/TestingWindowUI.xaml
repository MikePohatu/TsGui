<Window x:Class="TsGui.Diagnostics.TestingWindowUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TsGui.Diagnostics"
        mc:Ignorable="d"
        Title="Test mode" Height="300" Width="400" Topmost="True"
        WindowStartupLocation="Manual" Left="10" Top="10">
    <StackPanel Orientation="Horizontal">
        <StackPanel HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="10,10,10,10" >
            <DataGrid x:Name="OptionsGrid" ItemsSource="{Binding Options}"
                      AlternatingRowBackground="LightGray"  AlternationCount="2" AutoGenerateColumns="False"
                      HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Variable" Binding="{Binding VariableName}" />
                    <DataGridTextColumn Header="Value" Binding="{Binding LiveValue}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="10,10,10,10">
            <TextBlock Text="Left:"/>
            <TextBlock Text="Top:"/>
            <TextBlock Text="Primary Screen Width:"/>
            <TextBlock Text="Primary Screen Height:"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="10,10,10,10">
            <TextBlock Text="{Binding TsMainWindow.WindowLocation.Left}"/>
            <TextBlock Text="{Binding TsMainWindow.WindowLocation.Top}"/>
            <TextBlock Text="{Binding ScreenWidth}"/>
            <TextBlock Text="{Binding ScreenHeight}"/>
        </StackPanel>

    </StackPanel>
</Window>
