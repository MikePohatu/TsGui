<Window x:Class="TsGui.Diagnostics.TestingWindowUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TsGui.Diagnostics"
        mc:Ignorable="d"
        Title="Live Data" SizeToContent="WidthAndHeight" Icon="{Binding Icon}"
        Topmost="True" WindowStartupLocation="Manual" Left="10" Top="10">
    <Window.Resources>
        <Style x:Key="DataGridColumnHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="TextBlock.Foreground" Value="White"/>
            <Setter Property="Background" Value="Gray"/>
        </Style>
    </Window.Resources>

    <StackPanel Orientation="Vertical" Width="Auto" VerticalAlignment="Top" Margin="10">
        <StackPanel x:Name="_tsvarwrapperpanel" >
            <DataGrid x:Name="_optionsgrid" ItemsSource="{Binding Options}" AlternatingRowBackground="LightGray" 
                              AlternationCount="2" AutoGenerateColumns="False" HeadersVisibility="Column"  
                              Margin="0" FrozenColumnCount="1"
                              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle}" 
                              IsReadOnly="True" HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="_variablecolumn" Header="Variable" Binding="{Binding VariableName}" 
                            Width="Auto"/>
                    <DataGridTextColumn x:Name="_valuecolumn" Header="Value" Binding="{Binding LiveValue}" 
                            MinWidth="130" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        
        <Grid Margin="0,10,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Window Position" FontWeight="Bold" Grid.Row="0" Grid.ColumnSpan="4"/>
            <TextBlock Text="Left: " Grid.Column="0" Grid.Row="1"/>
            <TextBlock Text="{Binding TsMainWindow.WindowLocation.Left}" Grid.Column="1" Grid.Row="1"/>
            <TextBlock Text="Top: " Grid.Column="2" Grid.Row="1"/>
            <TextBlock Text="{Binding TsMainWindow.WindowLocation.Top}" Grid.Column="3" Grid.Row="1"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Screen Dimensions" FontWeight="Bold" Margin="2,5,2,2"/>
            <TextBlock Text="Primary Screen Width: " Grid.Column="0" Grid.Row="1"/>
            <TextBlock Text="Primary Screen Height: " Grid.Column="0" Grid.Row="2"/>
            <TextBlock Text="{Binding ScreenWidth}" Grid.Column="1" Grid.Row="1"/>
            <TextBlock Text="{Binding ScreenHeight}" Grid.Column="1" Grid.Row="2"/>
        </Grid>
    </StackPanel>
</Window>
