<Window x:Class="TsGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TsGui"
        mc:Ignorable="d"
        Title="{Binding HeadingTitle}" Height="{Binding Height, Mode=TwoWay}" Width="{Binding Width, Mode=TwoWay}"

        WindowStartupLocation="Manual" 
        Topmost="True"
        Left="40" Top="40" WindowStyle="None"
        MouseLeftButtonDown="windowDrag" ResizeMode="NoResize"
        AllowsTransparency="True">

    <Grid Name="ContentWrapper">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
            <RowDefinition x:Name="FooterRow" Height="{Binding FooterHeight}" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Frame Name="ContentArea" NavigationUIVisibility="Hidden">

            </Frame>
        </Grid>
        <Grid x:Name="FooterGrid" Grid.Row="1" Background="#FFE5E5E5" Margin="0,0,0,0" ShowGridLines="{Binding ShowGridLines}">
            <StackPanel >
                <TextBlock Text="{Binding FooterText}" HorizontalAlignment="{Binding FooterHAlignment}" FontStyle="Italic" FontSize="10" Padding="3,1,12,1" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>