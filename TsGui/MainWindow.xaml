<Window x:Class="TsGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TsGui"
        mc:Ignorable="d"
        Title="{Binding HeadingTitle}" Height="{Binding Height, Mode=TwoWay}" Width="{Binding Width, Mode=TwoWay}"
        WindowStartupLocation="Manual" 
        Left="40" Top="40" WindowStyle="None"
        MouseLeftButtonDown="windowDrag">
    <Frame Name="ContentArea" NavigationUIVisibility="Hidden">
        
    </Frame>
</Window>