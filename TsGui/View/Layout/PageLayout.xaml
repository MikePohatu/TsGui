<Page x:Class="TsGui.View.Layout.PageLayout"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TsGui.View.Layout"
      mc:Ignorable="d" 
      ShowsNavigationUI="False"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageLayout">

    <Grid x:Name="WrapperGrid" ShowGridLines="{Binding ShowGridLines}">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="HeadingRow" Height="50"/>
            <RowDefinition x:Name="MainRow" Height="100*"/>
            <RowDefinition x:Name="ButtonRow" Height="50" />
        </Grid.RowDefinitions>
        <Border CornerRadius="7,7,0,0" Background="{Binding HeadingBgColor}" >
            <Grid x:Name="HeadingGrid" Grid.Row="0" ShowGridLines="{Binding ShowGridLines}" >
                <StackPanel x:Name="HeadingStack" Margin="10,5,10,10" >
                    <TextBlock x:Name="HeadingTitle" Text="{Binding HeadingTitle}" Foreground="{Binding HeadinFontColor}" FontFamily="Segoe UI Semibold" FontSize="13.333" />
                    <TextBlock x:Name="HeadingText" Text="{Binding HeadingText}" Foreground="{Binding HeadinFontColor}" />
                </StackPanel>
            </Grid>
        </Border>
        <Grid  Background="White" Grid.Row="1" >
            <Grid x:Name="MainGrid" Margin="10,5,10,5" ShowGridLines="{Binding ShowGridLines}"></Grid>
        </Grid>
        <Grid Grid.Row="2" Background="#FFF3F2F2" ShowGridLines="{Binding ShowGridLines}">
            <Grid x:Name="ButtonGrid" Margin="10,10,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*"></ColumnDefinition>
                    <ColumnDefinition Width="80"></ColumnDefinition>
                    <ColumnDefinition Width="80"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button x:Name="buttonNext" IsEnabled="False" Visibility="Hidden" Content="{Binding ButtonTextNext}" HorizontalAlignment="Right" Margin="5,0,0,0" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Width="75" Height="30" Click="buttonNext_Click"/>
                <Button x:Name="buttonFinish" Content="{Binding ButtonTextFinish}" HorizontalAlignment="Right" Margin="5,0,0,0" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Width="75" Height="30" Click="buttonFinish_Click"/>
                <Button x:Name="buttonPrev" IsEnabled="False" Visibility="Hidden" Content="{Binding ButtonTextBack}" HorizontalAlignment="Left" Margin="0,0,5,0" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Width="75" Height="30" Click="buttonPrev_Click"/>
                <Button x:Name="buttonCancel" Content="{Binding ButtonTextCancel}" HorizontalAlignment="Left" Margin="0,0,0,0" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Width="75" Height="30" Click="buttonCancel_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
