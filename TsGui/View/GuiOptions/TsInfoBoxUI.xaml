<UserControl x:Class="TsGui.View.GuiOptions.TsInfoBoxUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TsGui.View.GuiOptions"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300">
    <Grid>
        <TextBlock x:Name="Control" Text="{Binding ControlText, Converter={StaticResource XmlStringLine}}" Style="{StaticResource ControlStyle}" TextWrapping="Wrap"
                   Foreground="{Binding ControlStyle.FontColorBrush}" VerticalAlignment="{Binding ControlStyle.VerticalContentAlignment}" Height="Auto"/>
    </Grid>
</UserControl>
