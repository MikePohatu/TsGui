<UserControl x:Class="TsGui.View.GuiOptions.TsCheckBoxUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TsGui.View.GuiOptions"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20">
    <Border x:Name="CbBorder" Width="Auto" Height="Auto" Margin="{Binding CbBorderMargin}"
            HorizontalAlignment="{Binding ControlFormatting.HorizontalAlignment}" VerticalAlignment="{Binding ControlFormatting.VerticalAlignment}">
        <CheckBox x:Name="CheckBox" IsChecked="{Binding IsChecked}" Style="{StaticResource ControlStyle}"/>
    </Border>
</UserControl>
