<UserControl x:Class="TsGui.View.GuiOptions.TsImageUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TsGui.View.GuiOptions"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Image x:Name="ImageElement" Style="{StaticResource ControlStyle}" 
           Width="{Binding ImageWidth}" Height="{Binding ImageHeight}"
           Source="{Binding MultiImage.CurrentImage}" RenderOptions.BitmapScalingMode="Fant" 
           Stretch="{Binding StretchMode}"/>
</UserControl>
