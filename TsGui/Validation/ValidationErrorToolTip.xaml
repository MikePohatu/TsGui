<UserControl x:Class="TsGui.Validation.ValidationErrorToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TsGui.Validation"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <TextBox TextWrapping="Wrap" 
             AcceptsReturn="True" 
             BorderBrush="Red"
             Margin="0" Width="Auto" Height="Auto" 
             BorderThickness="0.5" 
             Padding="5" HorizontalContentAlignment="Left"
             Text="{Binding ValidationText}"/>
</UserControl>
