<UserControl x:Class="TsGui.Validation.ValidationErrorToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TsGui.Validation"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <UserControl.Resources>
        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                    Height="{TemplateBinding Height}" Width="{TemplateBinding Width}" Margin="{TemplateBinding Margin}"
                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="0,5,5,5">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid>
        <Polygon Margin="0,7,0,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="40"
            Height="20"
            Points="0,0 2,0 1,1"
            Fill="Red"
            Stretch="Fill"
            Stroke="Red"
            StrokeThickness="0.7" />
        <TextBox x:Name="ToolTipTextBox" TextWrapping="Wrap" 
                 AcceptsReturn="True"
                 BorderBrush="Red"
                 Margin="5,1,1,1" Width="Auto" Height="Auto" 
                 BorderThickness="0.7" 
                 Padding="7,5,7,7" HorizontalContentAlignment="Left"
                 Template="{StaticResource TextBoxBaseControlTemplate}"
                 Text="{Binding ValidationText}"/>
    </Grid>
</UserControl>
